@model RegisterViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["Register"]</title>
    <style>

        body {
            background-image: url('/images/librarypic.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-color: #f1f3f4;
            font-family: 'Arial', sans-serif;
            color: #343a40;
        }

        .register-container {
            max-width: 450px;
            margin: 100px auto;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 10px 15px rgba(0, 0, 0, 0.1);
        }

        .register-header {
            text-align: center;
            margin-bottom: 30px;
            font-size: 1.8rem;
            font-weight: 700;
            color: #6c4f3d;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 8px;
            box-shadow: none;
            border: 1px solid #ddd;
            padding: 15px;
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: #6c4f3d;
                box-shadow: 0 0 5px rgba(108, 79, 61, 0.5);
            }

        .btn-primary {
            background-color: #6c4f3d;
            border: none;
            padding: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 8px;
            width: 100%;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #5a3e29;
            }

        .text-center a {
            font-weight: bold;
            color: #6c4f3d;
            text-decoration: none;
        }

            .text-center a:hover {
                text-decoration: underline;
            }

        .icon {
            font-size: 50px;
            color: #6c4f3d;
            margin-bottom: 20px;
        }

        .error-message {
            color: red;
            font-size: 0.875rem;
        }

    </style>
</head>
<body>
    <div class="register-container">
        <div class="text-center">
            <h3>@Localizer["Register"]</h3>
        </div>

        <form method="post">
            <div class="form-group">
                <label for="Username">@Localizer["Username"]</label>
                <input type="text" class="form-control" id="Username" name="Username" required placeholder="@Localizer["Username"]" />
                <span class="error-message">@Html.ValidationMessageFor(m => m.Username)</span>
            </div>

            <div class="form-group">
                <label for="Email">@Localizer["Email"]</label>
                <input type="email" class="form-control" id="Email" name="Email" required placeholder="@Localizer["Email"]" />
                <span class="error-message">@Html.ValidationMessageFor(m => m.Email)</span>
            </div>

            <div class="form-group">
                <label for="Password">@Localizer["Password"]</label>
                <input type="password" class="form-control" id="Password" name="Password" required placeholder="@Localizer["Password"]" />
                <span class="error-message">@Html.ValidationMessageFor(m => m.Password)</span>
            </div>

            <button type="submit" class="btn btn-primary">@Localizer["Register"]</button>
        </form>

        <div class="text-center mt-3">
            <p>@Localizer["Already Have Account?"] <a asp-controller="Account" asp-action="Login">@Localizer["Login Here"]</a></p>
        </div>
    </div>
</body>
</html>
